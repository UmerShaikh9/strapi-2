{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "User": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "Order_Status": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "CONFIRMED",
        "PROCESSING",
        "SHIPPED",
        "OUT FOR DELIVERY",
        "DELIVERED"
      ],
      "default": "PENDING"
    },
    "Total_Price": {
      "type": "decimal"
    },
    "Products": {
      "type": "component",
      "repeatable": true,
      "component": "user-product.product"
    },
    "Payment_Details": {
      "type": "component",
      "repeatable": false,
      "component": "user-product.payment-details",
      "required": true
    },
    "Full_Name": {
      "type": "string"
    },
    "Country": {
      "type": "string"
    },
    "State": {
      "type": "string"
    },
    "Currency": {
      "type": "string"
    },
    "Address": {
      "type": "string"
    },
    "Phone": {
      "type": "string"
    },
    "Email": {
      "type": "string"
    },
    "City": {
      "type": "string"
    },
    "Pincode": {
      "type": "string"
    },
    "Coupon": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::coupon.coupon",
      "inversedBy": "Orders"
    },
    "Shipping_Charges": {
      "type": "decimal",
      "default": 0
    }
  }
}
