{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "User": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "Order_Status": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "CONFIRMED",
        "PROCESSING",
        "SHIPPED",
        "OUT FOR DELIVERY",
        "DELIVERED"
      ],
      "default": "PENDING"
    },
    "Total_Price": {
      "type": "integer"
    },
    "Products": {
      "type": "component",
      "repeatable": true,
      "component": "user-product.product"
    },
    "Payment_Details": {
      "type": "component",
      "repeatable": false,
      "component": "user-product.payment-details",
      "required": true
    }
  }
}
